{
  "image": "mcr.microsoft.com/devcontainers/ruby:3",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bundle install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "rails server"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "forwardPorts": [3000, 5000],
  "portsAttributes": {
    "3000": {
      "label": "Backend"
    },
    "5000": {
      "label": "Frontend"
    }
  }
}
